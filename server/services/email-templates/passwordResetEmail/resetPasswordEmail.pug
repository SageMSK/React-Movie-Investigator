doctype html
html
  head
    meta(name='viewport', content='width=device-width')
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    style
      include resetPasswordEmail.css

    body
      .email-password-reset
        h3.email-password-reset__title Password Reset

        .email-password-reset__body
          a.email-password-reset__button(href=resetURL, target="_blank", rel="noopener") Reset My Password

          p.email-password-reset__text If you can't click the button above, please visit:
            br
            | #{resetURL}

          p.email-password-reset__text If you didn't request this email, please ignore.
